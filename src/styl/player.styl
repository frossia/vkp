@import variables



nav#side
	position: fixed
	z-index: 4
	height: 100%
	width: 50px
	background: $color3


nav#top
	position: fixed
	z-index: 3
	width: 100%
	display:        flex
	justify-content: flex-end
	flex-direction: row
	height:         50px
	background:     $color3
	padding: 0 10px
	font-size: 14px

#user-info
	display:     flex
	align-items: center

	& *
		margin: 0 0 0 10px

	img
		height: 35px
		width: 35px
		border-radius: 50%
		box-shadow: 0 0 3px  rgba(255,255,255, 1)
		margin: 0 0 0 20px

	button
		height: 50px
		background: $color3
		border: none
		color: $color4
		transition: all 0.1s ease-in-out

		&:hover
			color: #fff
			background: $color5

#songs
	display:         flex
	flex-direction:  row
	justify-content: center
	align-items:     center
	flex-wrap:       wrap

	.song
		width: 300
		height: 300
		// background: $color3
		// box-shadow: inset 0 0 0 1px $color1

		&:hover
			img.loaded
				opacity: 1
				filter:  grayscale(0%)
			.overlay
				opacity: 1

		img
			height: 300
			width: 300
			// box-shadow: inset 0 0 0 1px $color4
			opacity: 0

			&.loaded
				transition: opacity 0.5s ease-in-out, filter 1s
				// transition: filter 1s
				opacity: 0.2
				filter: grayscale(100%)
				// box-shadow: inset 0 0 0 20px $color5
				// border: 5px solid $color5


		.overlay
			transition: opacity 0.5s ease-in-out, filter 1s
			position: relative
			top: -300px
			height: 300px
			width: 300px
			background-image: linear-gradient(transparent, $color3)
			opacity: 0

		&.no-image
			transition: all 1.5s
			.svg-no-image
				filter: grayscale(100%)
				transition: all 1.5s
				opacity: 0.1
				&:hover
					filter: grayscale(80%)
					opacity: 1



.svg-no-image
	height: 300
	width: 300



#user
	display: flex
	align-items: center
	flex-direction: row
	img
		height: 80
		width: 80
		border-radius: 50%
		box-shadow: 0 0 0 1px , 0 0 0 5px $color5
	.fio
		padding: 20px 0
		text-align: center
	.ln
		text-transform: uppercase




